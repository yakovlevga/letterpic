{
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "module": "ES2015",
    "declaration": true,
    "moduleResolution": "node",
    "removeComments": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "sourceMap": true,    
    "typeRoots": ["typings"]
  },
  "exclude": ["node_modules"]
}
