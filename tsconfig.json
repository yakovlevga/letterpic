{
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "module": "ES2015",
    "declaration": true,
    "removeComments": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "sourceMap": false,    
    "typeRoots": ["typings"],
    "jsx": "react",
  },
  "exclude": ["node_modules"]
}
